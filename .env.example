# Environment Configuration for Elementa
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development

# Database Configuration
ELEMENTA__DATABASE__POSTGRES_URL=postgresql://elementa:elementa@localhost:5432/elementa_dev
ELEMENTA__DATABASE__MONGODB_URL=mongodb://localhost:27017/elementa_dev
ELEMENTA__DATABASE__REDIS_URL=redis://localhost:6379

# Email Configuration
ELEMENTA__EMAIL__SMTP_HOST=smtp.gmail.com
ELEMENTA__EMAIL__SMTP_PORT=587
ELEMENTA__EMAIL__SMTP_USERNAME=your-email@gmail.com
ELEMENTA__EMAIL__SMTP_PASSWORD=your-app-password
ELEMENTA__EMAIL__FROM_ADDRESS=noreply@yourcompany.com
ELEMENTA__EMAIL__FROM_NAME=Elementa Compliance System

# VLM Configuration
ELEMENTA__VLM__API_KEY=your-openai-api-key
ELEMENTA__VLM__MODEL=gpt-4-vision-preview

# Chemical Database APIs
ELEMENTA__CHEMICAL_DB__API_KEYS__EPA=your-epa-api-key
ELEMENTA__CHEMICAL_DB__API_KEYS__CAS=your-cas-api-key

# Logging
ELEMENTA__LOGGING__LEVEL=debug
ELEMENTA__LOGGING__FORMAT=pretty

# Monitoring
ELEMENTA__MONITORING__METRICS_ENABLED=false